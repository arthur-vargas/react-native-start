{
  "env": {
    "react-native/react-native": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react-native"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js", ".jsx"
        ]
      }
    ],
    "import/prefer-default-export": 0,
    "no-use-before-define": ["error", { "functions": true, "classes": true, "variables": false }]
  }
}